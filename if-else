#include <iostream>
using namespace std;
int main()
{
int angka;
cout<<"---------------------------"<<endl;
cout<<"Daftar Pilihan Minuman"<<endl;
cout<<"1.Susu Indomilk"<<endl;
cout<<"2.Monti"<<endl;
cout<<"3.Tabs"<<endl;
cout<<"4.Sprite"<<endl;
cout<<"5.Cimory"<<endl;
cout<<"---------------------------"<<endl;
cout<<"Masukkan Pilihan Anda " <<endl;
cin>>angka;
if (angka==1)
cout<<"Anda Memesan Susu Indomilk,Pesanan Anda Akan Keluar";
else
if (angka==2)
cout<<"Anda Memesan Monti,Pesanan Anda Akan Keluar";
else
if (angka==3)
cout<<"Anda Memesan Tabs,Pesanan Anda Akan Keluar";
else
if (angka==4)
cout<<"Anda Memesan Sprite, Pesanan Anda Akan Keluar";
else
if (angka==5)
cout<<"Anda Memesan Cimory, Pesanan Anda Akan Keluar ";
else
cout<<"Anda Memasukkan Angka Yang Salah ";
return 0;
}
